<templateSet group="logger">
  <template name="sli" value="logger.info(&quot;$COMMENT$&quot;);" description="slf4j logger info" toReformat="true" toShortenFQNames="true">
    <variable name="COMMENT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="sld" value="logger.debug(&quot;$COMMENT$&quot;);" description="slf4j logger debug" toReformat="true" toShortenFQNames="true">
    <variable name="COMMENT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="slw" value="logger.warn(&quot;$COMMENT$&quot;);" description="slf4j logger warning" toReformat="false" toShortenFQNames="true">
    <variable name="COMMENT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="sle" value="logger.error(&quot;$COMMENT$&quot;);" description="slf4j error" toReformat="false" toShortenFQNames="true">
    <variable name="COMMENT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="sldec" value="private static final Logger logger = LoggerFactory.getLogger($CLASSNAME$.class);" description="slf4j logger declaration" toReformat="false" toShortenFQNames="true">
    <variable name="CLASSNAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_DECLARATION" value="true" />
    </context>
  </template>
</templateSet>